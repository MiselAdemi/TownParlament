<div class="page-header">
  <h1>Users</h1>
</div>

<%= search_form_for @q, :url => admin_users_path, :html => { :method => :get, :class => "well form-inline" } do |f| %>
  <div class="form-group">
    <%= f.text_field :name_or_email_cont, :type => "search", :class => "form-control", :placeholder => "Search by name_or_email" %>
  </div>

  <%= f.submit "Search", :class => "btn btn-default" %>
<% end %>


<p><%= link_to("Create a new User", new_admin_user_path) %></p>

<table class="sortable table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th><%= sortable "id" %></th>
      <th><%= sortable "email" %></th>
      <th><%= sortable "encrypted_password" %></th>
      <th><%= sortable "reset_password_token" %></th>
      <th><%= sortable "reset_password_sent_at" %></th>
      <th><%= sortable "remember_created_at" %></th>
      <th><%= sortable "sign_in_count" %></th>
      <th><%= sortable "current_sign_in_at" %></th>
      <th><%= sortable "last_sign_in_at" %></th>
      <th><%= sortable "current_sign_in_ip" %></th>
      <th><%= sortable "last_sign_in_ip" %></th>
      <th><%= sortable "created_at" %></th>
      <th><%= sortable "updated_at" %></th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr class="user">
        <td><%= link_to(user.id, admin_user_path(user)) %></td>
        <td><%= user.email %></td>
        <td><%= user.encrypted_password %></td>
        <td><%= user.reset_password_token %></td>
        <td><%= user.reset_password_sent_at %></td>
        <td><%= user.remember_created_at %></td>
        <td><%= user.sign_in_count %></td>
        <td><%= user.current_sign_in_at %></td>
        <td><%= user.last_sign_in_at %></td>
        <td><%= user.current_sign_in_ip %></td>
        <td><%= user.last_sign_in_ip %></td>
        <td><%= user.created_at %></td>
        <td><%= user.updated_at %></td>
        <td><%= link_to('Edit', edit_admin_user_path(user)) %></td>
        <td><%= link_to('Delete', admin_user_path(user), :confirm => "Are you sure?", :method => :delete) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>
